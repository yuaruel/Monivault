@using Monivault.Authorization
@using Monivault.Web.Startup
@model Monivault.Web.Models.Roles.RoleListViewModel
@{
    ViewBag.CurrentPageName = PageNames.RoleManagement; // The menu item will be active for this page.
}
@section scripts
{
    <script src="~/js/custom/datatables.bundle.js"></script>
    <script src="~/view-resources/Views/Roles/Index.js" asp-append-version="true"></script>
    <script src="~/view-resources/Views/Roles/_CreateRoleModal.js"></script>
    <script src="~/view-resources/Views/Roles/_EditRoleModal.js"></script>
}
<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Roles</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="#" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">@L("RoleManagement")</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">@L("RolesAndPermissions")</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- END: Subheader -->
    
    <div class="m-content">
        <div class="m-portlet m-portlet--mobile">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            @L("RoleManagement")
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        @if (IsGranted(PermissionNames.CreateRoles))
                        {
                            <li class="m-portlet__nav-item">
                                <a id="AddNewRoleBtn" href="#" data-toggle="modal" data-target="#_CreateRoleModal" class="btn btn-accent m-btn m-btn--custom m-btn--pill m-btn--icon m-btn--air">
                                    <span>
                                        <i class="la la-plus"></i>
                                        <span>@L("NewRole")</span>
                                    </span>
                                </a>
                            </li>   
                        }
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <table id="RoleTable" class="table table-striped- table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>@L("RoleName")</th>
                        <th>@L("DateAdded")</th>
                        <th>@L("Permissions")</th>
                        <th></th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<!--begin::CreateModal-->
<div class="modal fade" id="_CreateRoleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">@L("NewRole")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>Please wait...</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@L("Close")</button>
                <button id="SaveRoleBtn" type="button" class="btn btn-primary">@L("AddRole")</button>
            </div>
        </div>
    </div>
</div>

<!--end::CreateModal-->

<!--begin::EditModal-->
<div class="modal fade" id="_EditRoleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">@L("EditRole")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>Please wait...</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@L("Close")</button>
                <button id="UpdateRoleBtn" type="button" class="btn btn-primary">@L("Update")</button>
            </div>
        </div>
    </div>
</div>

<!--end::EditModal-->
