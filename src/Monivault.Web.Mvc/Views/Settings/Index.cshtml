@using Monivault.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.Settings;
}
@section styles
{
    <link href="~/lib/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.css" rel="stylesheet" type="text/css" />
}
@section scripts
{
    <script src="~/lib/bootstrap-switch/dist/js/bootstrap-switch.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.js" type="text/javascript"></script>
    <script src="~/view-resources/Views/Settings/Index.js"></script>
}
<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">@L("ApplicationSettings")</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="#" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">@L("Settings")</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">@L("ManageAllApplicationSettings")</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->
    
    <div class="m-content">
        <div class="m-portlet m-portlet--tabs">
            <div class="m-portlet__head">
                <div class="m-portlet__head-tools">
                    <ul class="nav nav-tabs m-tabs-line m-tabs-line--success m-tabs-line--2x" role="tablist">
                        <li class="nav-item m-tabs__item">
                            <a class="nav-link m-tabs__link active" data-toggle="tab" href="#GeneralTabContent" role="tab">
                                <i class="la la-cog"></i> @L("General")
                            </a>
                        </li>
                        <li class="nav-item m-tabs__item">
                            <a class="nav-link m-tabs__link" data-toggle="tab" href="#WithdrawalTabContent" role="tab">
                                <i class="la la-briefcase"></i> @L("Withdrawal")
                            </a>
                        </li>
                        <li class="nav-item m-tabs__item">
                            <a class="nav-link m-tabs__link" data-toggle="tab" href="#InterestTabContent" role="tab">
                                <i class="la la-bell-o"></i> @L("Interest")
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <div class="tab-content">
                    <div class="tab-pane active" id="GeneralTabContent" role="tabpanel">
                        <form class="m-form m-form--fit m-form--label-align-right" asp-action="UpdateGeneralSettings">
                            <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-3 col-sm-12">@L("StopDeposit")</label>
                                <div class="col-lg-9 col-md-9 col-sm-12">
                                    <input type="checkbox" data-switch="true" id="StopDeposit"/>
                                </div>
                            </div>
                            <div class="group m-form__group row">
                                <label class="col-form-label col-lg-3 col-sm-12">@L("StopSignUp")</label>
                                <div class="col-lg-9 col-md-9 col-sm-12">
                                    <input type="checkbox" data-switch="true" id="StopSignUp"/>
                                </div>
                            </div>
                            <div class="m-form__actions m-form__actions">
                                <div class="row">
                                    <div class="col-lg-2"></div>
                                    <div class="col-lg-6">
                                        <button id="UpdateGeneralSettingsBtn" type="button" class="btn btn-success">Update</button>
                                        <button type="reset" class="btn btn-secondary">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane" id="WithdrawalTabContent" role="tabpanel">
                        <form class="m-form m-form--fit m-form--label-align-right" asp-action="UpdateWithdrawalSettings">
                            <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-3 col-sm-12">@L("WithdrawalServiceCharge")</label>
                                <div class="col-lg-5 col-md-5 col-sm-12">
                                    <div class="input-group m-input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">N</span>
                                        </div>
                                        <input class="form-control m-input" id="TransferServiceCharge" name="TransferServiceCharge"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-3 col-sm-12">@L("StopWithdrawal")</label>
                                <div class="col-lg-5 col-md-5 col-sm-12">
                                    <input type="checkbox" data-switch="true" id="StopWithdrawal"/>
                                </div>
                            </div>
                            <div class="m-form__actions m-form__actions">
                                <div class="row">
                                    <div class="col-lg-2"></div>
                                    <div class="col-lg-6">
                                        <button id="UpdateWithdrawalSettingsBtn" type="button" class="btn btn-success">Update</button>
                                        <button type="reset" class="btn btn-secondary">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane" id="InterestTabContent" role="tabpanel">
                        <form class="m-form m-form--fit m-form--label-align-right" asp-action="UpdateInterestSettings">
                            <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-3 col-sm-12">@L("InterestStatus")</label>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <input type="checkbox" id="InterestStatus"/>
                                </div>
                            </div>
                            <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-3 col-sm-12">@L("InterestType")</label>
                                <div class="col-lg-6 col-md-6 col-sm-12 m-radio-inline">
                                    <label class="m-radio">
                                        <input type="radio" name="InterestType" value="SimpleInterest" checked="checked"> @L("SimpleInterest")
                                        <span></span>
                                    </label>
                                    <label class="m-radio">
                                        <input type="radio" name="InterestType" value="CompoundInterest"> @L("CompoundInterest")
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-3 col-sm-12">@L("Rate")</label>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <div class="m-bootstrap-touchspin-brand">
                                        <input id="InterestRate" type="text" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-3 col-sm-12">@L("Duration")</label>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <div class="m-bootstrap-touchspin-brand">
                                        <input id="InterestDuration" type="text" class="form-control"/>
                                    </div>
                                    <span class="m-form__help">
                                        The duration is the number of days the interest calculation is going to run, before the total daily interest calculation will be transferred to the account holders balance.
                                    </span>
                                </div>
                            </div>
                            <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-3 col-sm-12">@L("PenaltyPercentageDeduction")</label>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <div class="m-bootstrap-touchspin-brand">
                                        <input id="PenaltyDeduction" type="text" class="form-control"/>
                                    </div>
                                    <span class="m-form__help">
                                        The penalty percentage deduction is the percentage that will be deducted from the account holder daily accumulated interest, when they make a withdrawal from their account, before the completion of the interest duration.
                                    </span>
                                </div>
                            </div>
                            <div class="m-form__actions m-form__actions">
                                <div class="row">
                                    <div class="col-lg-2"></div>
                                    <div class="col-lg-6">
                                        <button id="UpdateInterestSettingsBtn" type="button" class="btn btn-success">Update</button>
                                        <button type="reset" class="btn btn-secondary">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>