@using System.Globalization
@using Abp.Configuration.Startup
@using Abp.Web.Security.AntiForgery
@using Monivault
@using Monivault.Web.Resources
@inject Monivault.Timing.AppTimes AppTimes
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@inject IMultiTenancyConfig MultiTenancyConfig
@inject IWebResourceManager WebResourceManager
@{
    Layout = null;
    AbpAntiForgeryManager.SetCookie(Context);
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
	<meta name="description" content="">
	<meta name="author" content="">

	<link rel="shortcut icon" href="~/favicon.ico">

	<title>Monivault</title>
	<!--begin::Web font -->
	<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
	<script>
		WebFont.load({
			google: {"families":["Poppins:300,400,500,600,700","Roboto:300,400,500,600,700"]},
			active: function() {
				sessionStorage.fonts = true;
			}
		});
	</script>

	<!--end::Web font -->
	<link href="~/lib/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet" type="text/css" />
	<link href="~/css/outer/style.bundle.css" rel="stylesheet" type="text/css" />

	<!-- View specific styles -->
	@RenderSection("styles", required: false)

	<script type="text/javascript">
		// This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
		var abp = abp || {};
		abp.appPath = '@ApplicationPath';
	</script>
	
	<link rel="shortcut icon" href="~/favicon.ico" />

</head>

<!-- begin::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">

<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">
	@RenderBody()
</div>

<!-- end:: Page -->

	<!--begin:: Global Mandatory Vendors -->
	<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
	<script src="~/lib/popper.js/dist/umd/popper.js" type="text/javascript"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
	<script src="~/lib/js-cookie/src/js.cookie.js" type="text/javascript"></script>
	<script src="~/lib/moment/min/moment.min.js" type="text/javascript"></script>
	<script src="~/lib/tooltip.js/dist/umd/tooltip.min.js" type="text/javascript"></script>
	<script src="~/lib/perfect-scrollbar/dist/perfect-scrollbar.js" type="text/javascript"></script>
<script src="~/lib/wnumb/wNumb.js" type="text/javascript"></script>
<script src="~/lib/sweetalert/dist/sweetalert.min.js" asp-append-version="true"></script>

	<script src="~/lib/jquery-form/dist/jquery.form.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
	<script src="~/lib/jquery-validation/dist/additional-methods.js" type="text/javascript"></script>
	<script src="~/js/jquery-validation.init.js" asp-append-version="true"></script>
<script src="~/lib/abp-web-resources/Abp/Framework/scripts/abp.js" asp-append-version="true"></script>
<script src="~/lib/abp-web-resources/Abp/Framework/scripts/libs/abp.sweet-alert.js" asp-append-version="true"></script>

	<!--end:: Global Mandatory Vendors -->

	<!--begin::Global Theme Bundle -->
	<script src="~/js/outer/scripts.bundle.js" type="text/javascript"></script>

	<!--end::Global Theme Bundle -->

	<!-- Dynamic scripts of ABP system (They are created on runtime and can not be bundled) -->
	<script src="~/AbpServiceProxies/GetAll?v=@(AppTimes.StartupTime.Ticks)" type="text/javascript"></script>
	<script src="~/AbpScripts/GetScripts?v=@(AppTimes.StartupTime.Ticks)" type="text/javascript"></script>
	@WebResourceManager.RenderScripts()

	<!-- View specific scripts -->
	@RenderSection("scripts", required: false)
</body>

</html>
