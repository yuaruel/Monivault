@model Monivault.Web.Models.Tax.TaxPaymentViewModel

@section Scripts{
    @*<script src="~/view-resources/Views/Tax/_TaxPaymentModal.js" type="text/javascript"></script>*@
}

@if (string.IsNullOrEmpty(Model.TaxIdentificationNumber))
{
    <div class="alert alert-danger" role="alert">
        <strong>@L("UpdateTaxProfile")</strong> @L("TaxProfileUpdateAlert")
    </div>
}
else
{
    <form id="TaxPaymentForm" class="m-form" asp-action="MakePayment">
        <div class="m-portlet__body">
            <div class="m-form__section m-form__section--first">
                <div class="form-group m-form__group row">
                    <label class="col-form-label col-lg-3">@L("TaxIdentificationNumber")</label>
                    <div class="col-lg-6">
                        <input rows="3" cols="5" name="TaxIdentificationNumber" id="TaxIdentificationNumber" value="@Model.TaxIdentificationNumber" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label class="col-form-label col-lg-3">@L("FullName")</label>
                    <div class="col-lg-6">
                        <input rows="3" cols="5" name="FullName" id="FullName" value="@Model.FullName" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label class="col-form-label col-lg-3">@L("TaxType")</label>
                    <div class="col-lg-6">
                        <select id="TaxType" name="TaxType" class="form-control m-bootstrap-select m_selectpicker" asp-items="@Model.TaxTypes" asp-for="TaxType"></select>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label class="col-form-label col-lg-3 col-sm-12">@L("TaxPeriod")</label>
                    <div class="col-lg-6 col-md-9 col-sm-12">
                        <div class="input-group date">
                            <input type="text" class="form-control m-input" readonly="readonly" data-date-format="dd/mm/yyyy" id="TaxPeriod" name="Period" />
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="la la-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label class="col-form-label col-lg-3 col-sm-12">@L("Amount")</label>
                    <div class="col-lg-6">
                        <div class="input-group m-input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">N</span>
                            </div>
                            <input class="form-control m-input" id="Amount" name="TaxAmount" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
